{
  "name": "digital-subscriptions-manager",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "test": "node tests/scripts/run-all-tests.js",
    "test:unit": "jest --config tests/setup/jest.config.js --testPathPattern=tests/unit",
    "test:integration": "jest --config tests/setup/jest.config.js --testPathPattern=tests/integration",
    "test:e2e": "playwright test tests/e2e",
    "test:performance": "lhci autorun",
    "test:a11y": "axe http://localhost:3000",
    "test:watch": "jest --config tests/setup/jest.config.js --watch",
    "test:coverage": "jest --config tests/setup/jest.config.js --coverage",
    "test:unit:watch": "jest --config tests/setup/jest.config.js --testPathPattern=tests/unit --watch",
    "test:debug": "node --inspect-brk node_modules/.bin/jest --config tests/setup/jest.config.js --runInBand",
    "test:ci": "jest --config tests/setup/jest.config.js --ci --coverage --watchAll=false",
    "test:update-snapshots": "jest --config tests/setup/jest.config.js --updateSnapshot",
    "deploy": "node deployment/scripts/deploy.js",
    "deploy:staging": "netlify deploy --dir=dist",
    "deploy:production": "netlify deploy --prod --dir=dist",
    "deploy:rollback": "netlify api rollbackSiteDeploy",
    "health:check": "node deployment/scripts/health-check.js",
    "monitor:deployment": "node deployment/scripts/monitor-deployment.js",
    "db:backup": "node netlify/functions/migrations/backup-runner.cjs",
    "db:migrate": "node netlify/functions/migrations/migration-runner.cjs",
    "db:rollback": "node netlify/functions/migrations/rollback-runner.cjs",
    "db:validate-migration": "node netlify/functions/migrations/validate-migration.cjs",
    "db:verify-migration": "node netlify/functions/migrations/verify-migration.cjs"
  },
  "dependencies": {
    "@heroicons/react": "^2.0.18",
    "@types/pg": "^8.10.9",
    "date-fns": "^3.6.0",
    "joi": "^17.13.3",
    "lucide-react": "^0.344.0",
    "node-fetch": "^3.3.2",
    "pg": "^8.11.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@axe-core/cli": "^4.8.0",
    "@babel/preset-env": "^7.23.0",
    "@babel/preset-react": "^7.23.0",
    "@babel/preset-typescript": "^7.23.0",
    "@eslint/js": "^9.9.1",
    "@lhci/cli": "^0.12.0",
    "@playwright/test": "^1.53.0",
    "@testing-library/jest-dom": "^6.1.0",
    "@testing-library/react": "^14.1.0",
    "@testing-library/user-event": "^14.5.0",
    "@types/jest": "^29.5.0",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.18",
    "babel-jest": "^29.7.0",
    "chalk": "^4.1.2",
    "eslint": "^9.9.1",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.11",
    "globals": "^15.9.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-html-reporters": "^3.1.0",
    "jest-junit": "^16.0.0",
    "jest-watch-typeahead": "^2.2.0",
    "msw": "^2.0.0",
    "netlify-cli": "^22.1.4",
    "playwright": "^1.53.0",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.3.0",
    "vite": "^5.4.2",
    "vite-plugin-pwa": "^0.21.0",
    "workbox-window": "^7.0.0"
  }
}
